<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="CavernaWPF.ActionCardControls.ActionCardRadioButtonControl" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Converters="clr-namespace:CavernaWPF.Converters">
	<StackPanel Orientation="Horizontal" IsEnabled="{Binding Able}">
		<RadioButton x:Name="radiobutton" GroupName="{Binding Group}" IsChecked="{Binding Selected, Mode=TwoWay}"></RadioButton>
		<TextBlock Text="{Binding Text}"></TextBlock>
	</StackPanel>
</UserControl>