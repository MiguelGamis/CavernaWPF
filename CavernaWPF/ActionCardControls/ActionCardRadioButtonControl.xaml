<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="CavernaWPF.ActionCardControls.ActionCardRadioButtonControl" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Converters="clr-namespace:CavernaWPF.Converters">
	<UserControl.Resources>
		<Converters:BoolToVisibilityConverter x:Key="boolconverter"/>
	</UserControl.Resources>
	<StackPanel Orientation="Horizontal">
		<CheckBox IsChecked="{Binding Selected, Mode=TwoWay}" Visibility="{Binding Optional, Converter={StaticResource boolconverter}}">
		</CheckBox>
		<ItemsControl ItemsSource="{Binding Options}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<RadioButton GroupName="Default">
							<RadioButton.Style>
								<Style TargetType="RadioButton">
									<Style.Triggers>
										<DataTrigger Binding="{Binding Selected}" Value="False">
											<Setter Property="IsEnabled" Value="False"/>
											<Setter Property="IsChecked" Value="False"/>
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</RadioButton.Style>
						</RadioButton>
						<TextBlock Text="{Binding}"></TextBlock>
					</StackPanel>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</StackPanel>
</UserControl>