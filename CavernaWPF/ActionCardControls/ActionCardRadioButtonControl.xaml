<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="CavernaWPF.ActionCardControls.ActionCardRadioButtonControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<ItemsControl ItemsSource="{Binding Options}">
		<ItemsControl.ItemTemplate>
			<DataTemplate>
				<StackPanel Orientation="Horizontal">
					<RadioButton GroupName="Default"></RadioButton>
					<TextBlock Text="{Binding}"></TextBlock>
				</StackPanel>
			</DataTemplate>
		</ItemsControl.ItemTemplate>
	</ItemsControl>
</UserControl>