<Window x:Class="CavernaWPF.SkipFieldOrBreedWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="CavernaWPF" Height="300" Width="300" WindowStyle="None">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="*"></RowDefinition>
			<RowDefinition
				Height="30"></RowDefinition>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0">
			<RadioButton GroupName="Default" Content="Skip Field Phase" x:Name="Field"></RadioButton>
			<RadioButton GroupName="Default" Content="Skip Breeding Phase" x:Name="Breed"></RadioButton>
		</StackPanel>
		<Grid Grid.Row="2" HorizontalAlignment="Right">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"></ColumnDefinition>
				<ColumnDefinition Width="60"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<Button Grid.Column="1" Click="OKButton_Click" Content="OK"></Button>
		</Grid>
	</Grid>
</Window>