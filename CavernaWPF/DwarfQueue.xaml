<ItemsControl x:Class="CavernaWPF.DwarfQueue"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Converters="clr-namespace:CavernaWPF.Converters">
	<ItemsControl.Resources>
		<Converters:ColorToDwarfConverter x:Key="colorconverter"/>
	</ItemsControl.Resources>
	<ItemsControl.ItemsPanel>
		<ItemsPanelTemplate>
			<StackPanel Orientation="Horizontal"></StackPanel>
		</ItemsPanelTemplate>
	</ItemsControl.ItemsPanel>
	<ItemsControl.ItemTemplate>
		<DataTemplate>
			<Image Source="{Binding player.Color, Converter={StaticResource colorconverter}}"></Image>
		</DataTemplate>
	</ItemsControl.ItemTemplate>
</ItemsControl>